@model TiendaRecargas.Models.Credenciales

@{
    ViewData["Title"] = "Create";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="proveedor" class="form-control" placeholder="Proveedor" />
                <span asp-validation-for="proveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="codigo" class="form-control" placeholder="Código" maxlength="20" />
                <span asp-validation-for="codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="token" class="form-control" placeholder="Token" rows="5"></textarea>
                <span asp-validation-for="token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary form-control mb-2" />
                <div>
                    <a class="btn btn-danger form-control" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

