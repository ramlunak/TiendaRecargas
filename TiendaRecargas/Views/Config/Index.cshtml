@model TiendaRecargas.Models.Cuenta
@{
    ViewData["Title"] = "Index";
}

<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4 d-block text-center">

        <div class="d-block">
            <img src="~/img/user.png" width="120" />
            <div><b>@Model.Nombre</b></div>

            <button type="button" class="btn btn-outline-danger mt-3" data-toggle="modal" data-target="#modalCambiarPass">Cambiar Contraseña</button>
        </div>

        <hr />

        <div class="text-center">

            <table>
                <tr>
                    <td class="text-right w-50"><b>E-mail: </b></td>
                    <td class="text-left"> @Model.Email</td>
                </tr>
                <tr>
                    <td class="text-right"><b>Telefóno: </b></td>
                    <td class="text-left"> @Model.Telefono</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td class="text-right w-50"><b>Crédito </b></td>
                    <td class="text-left"> @Model.Credito</td>
                </tr>
            </table>

        </div>


    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalCambiarPass" tabindex="-1" role="dialog" aria-labelledby="modalCambiarPassTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCambiarPassTitle">Cambiar Contraseña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row d-flex justify-content-center">
                    <div class="col-12">
                        <form onsubmit="return false;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input id="inputIdcuenta" type="hidden" asp-for="IdCuenta" />

                            @*Nombre*@
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </div>
                                    <input id="inputUsuario" asp-for="Usuario" disabled class="form-control" />
                                </div>
                            </div>

                            @*PASSWORD*@
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="fas fa-shield-alt"></i>
                                        </span>
                                    </div>
                                    <input id="inputPassword" asp-for="Password" autocomplete="off" placeholder="Contraseña" type="password" class="form-control" />
                                </div>

                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>


                            @*CONFIRMAR_PASSWORD*@
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="fas fa-shield-alt"></i>
                                        </span>
                                    </div>
                                    <input id="inputConfirmPassword" asp-for="ConfirmPassword" autocomplete="off" type="password" placeholder="Confirmar Contraseña" class="form-control" />

                                </div>

                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button onclick="UpdatePassword()" class="btn btn-primary btn-sm form-control form-control-sm mb-2">Guardar</button>
                                <button class="btn btn-danger btn-sm form-control form-control-sm" data-dismiss="modal">Cancelar</button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/views/config/index.js" asp-append-version="true"></script>
}
