@model TiendaRecargas.ViewModels.VMAccount

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header small">
        <div class="row d-flex justify-content-between p-2">

            <div>
                <a asp-action="Create" class="btn btn-primary btn-sm">Crear</a>
            </div>
            <div>
                <form id="formSearch">
                    <div class="d-flex align-items-center">
                        <input id="nombre" name="nombre" value="@ViewBag.FlrNombre" class="form-control form-control-sm  w-100" type="text" placeholder="Buscar"
                               aria-label="Search">
                        <button class="btn btn-sm btn-outline-primary"><i class="fa fa-search"></i></button>
                        <div onclick="LimpiarNombre()" class="btn btn-sm btn-outline-danger cursor-pointer"><i class="fa fa-ban" aria-hidden="true"></i></div>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="card-body">
        @*BODY CARD*@
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().i_account)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().login)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().fullname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().phone1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Accounts.First().country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Accounts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.i_account)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.balance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.login)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.country)
                        </td>
                        <td>
                            @Html.ActionLink("Balance", "Balance", new { id = item.i_account })
                            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @*FIN BODY CARD*@
    </div>
    <div class="card-footer small">
        <div class="d-flex justify-content-end">
            @{ Html.RenderPartial("_Paginador");}
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">

        function LimpiarNombre() {
            $('#nombre').val('');
            $('#formSearch').submit();
        }

        $(document).ready(function () {

        });
    </script>
}
