                        <span asp-validation-for="fullname" id="fullname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="text" readonly asp-for="balance" id="balance" class="form-control">
                        </div>
                    </div>
