@model TiendaRecargas.Models.Facturacion

@{
    ViewData["Title"] = "Facturacion";
    var filtro = new RecargaSearch();
}

<div class="card">
    <div class="card-header">
        <div class="row d-flex justify-content-between p-2">
            <div class="d-block align-items-center">
                <div> <b>FACTURACION</b></div>
                <div><b>@ViewBag.PrimerDiaSemana | @ViewBag.UltimoDiaSemana</b> </div>
            </div>
            <form asp-action="Facturacion">
                <div>
                    <div class="form-group d-flex">
                        <input asp-for="@filtro.input" type="week" value="@ViewBag.Semana" class="form-control form-control-sm" />
                        <button type="submit" class="btn btn-sm btn-outline-primary"><i class="fa fa-search"></i></button>
                    </div>

                </div>
            </form>
        </div>

    </div>
    <div class="card-body">
        @*BODY CARD*@

        <div class="row" style="font-weight:600">

            <div class="col-12 col-md-4">
                <div class="alert bg-danger text-white">
                    <div class="d-flex justify-content-between">
                        <div>Total a Pagar</div>
                        <div>$@Model.montoTotalRecargas.ToString("F2")</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="alert bg-success text-white">
                    <div class="d-flex justify-content-between">
                        <div>Su Comisión</div>
                        <div>$0.00</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="alert bg-info text-white">
                    <div class="d-flex justify-content-between">
                        <div>Recargas</div>
                        <div>@Model.totalRecargas</div>
                        <div>$@Model.montoTotalRecargas.ToString("F2")</div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>